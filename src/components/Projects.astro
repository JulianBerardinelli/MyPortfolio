---
import HtmlIcon from '../components/icons/HtmlIcon.astro'
import CssIcon from '../components/icons/CssIcon.astro'
import JSIcon from '../components/icons/JSIcon.astro'
import {Chip} from "@nextui-org/react";
import SassIcon from './icons/SassIcon.astro';
import TailIcon from './icons/TailIcon.astro';
import AngularIcon from './icons/AngularIcon.astro';
import NodeIcon from './icons/NodeIcon.astro';
import MongoIcon from './icons/MongoIcon.astro';
import StrapiIcon from './icons/StrapiIcon.astro';
import ExpressIcon from './icons/ExpressIcon.astro';
import AWSIcon from './icons/AWSIcon.astro'
import PostmanIcon from './icons/PostmanIcon.astro';
import SupabaseIcon from './icons/SupabaseIcon.astro';
import Postgre from './icons/PostgreSQLIcon.astro';
import Loading from './Loading.astro'
import NextIcon from './icons/NextIcon.astro';
import { transitionEnabledOnThisPage } from 'astro:transitions/client';

import i18next, { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";
import ReactIcon from './icons/ReactIcon.astro';
import NewProject from './NewProject.astro';


const TAGS ={
    HTML: {
        name: "HTML5",
        class: "bg-zinc-700 text-white",
        icon: HtmlIcon
    },
    CSS: {
        name: "CSS3",
        class: "bg-blue-800 text-white",
        icon: CssIcon
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-yellow-700 text-white",
        icon: JSIcon
    },
    SASS: {
        name: "SASS",
        class: "bg-pink-800 text-white",
        icon: SassIcon
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-cyan-900 text-white",
        icon: TailIcon
    },
    ANGULAR: {
        name: "Angular",
        class: "bg-purple-800 text-white",
        icon: AngularIcon
    },
    NODEJS: {
        name: "Node.js",
        class: "bg-green-900 text-white",
        icon: NodeIcon
    },
    MONGO: {
        name: "MongoDB",
        class: "bg-green-800 text-white",
        icon: MongoIcon
    },
    STRAPI: {
        name: "Strapi",
        class: "bg-blue-800 text-white",
        icon: StrapiIcon
    },
    EXPRESS:{
        name: "Express",
        class: "bg-zinc-700 text-white",
        icon: ExpressIcon
    },
    AWS:{
        name: "Amazon Web Service",
        class: "bg-yellow-800 text-white",
        icon: AWSIcon
    },
    POSTMAN:{
        name: "Postman",
        class: "bg-red-700 text-white",
        icon: PostmanIcon
    },
    POSTGRESQL:{
        name: "PostgreSQL",
        class: "bg-blue-800 text-white",
        icon: Postgre
    },
    REACT: {
        name: "React",
        class: "bg-cyan-800 text-white",
        icon: ReactIcon
    },
    NEXTJS: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextIcon
    },
    SUPABASE: {
        name: "Supabase",
        class: "bg-green-800 text-white",
        icon: SupabaseIcon
    },
}

const PROJECTS = [
    {
        title: "X - Twitter Clon",
        description: t("PROJ.xclon.desc"),
        link: "",
        github: "https://github.com/JulianBerardinelli/xClon",
        image: "/projects/projectXCLON.webp", 
        tags: [TAGS.REACT, TAGS.NEXTJS,TAGS.SUPABASE, TAGS.POSTGRESQL,TAGS.TAILWIND ],
    },
    {
        title: "FORELSKET-MB eCommerce ",
        description: t("PROJ.first.desc"),
        link: "",
        github: "https://github.com/JulianBerardinelli/",
        image: "/projects/projectFOREL.webp", 
        tags: [TAGS.ANGULAR, TAGS.STRAPI,TAGS.MONGO,TAGS.NODEJS,TAGS.EXPRESS,TAGS.TAILWIND,TAGS.POSTMAN ,TAGS.AWS ],
    },
    {
        title: "KYC Media Official WebSite",
        description: t("PROJ.second.desc"),
        link: "https://kycmedia.agency/",
        github: "https://github.com/JulianBerardinelli/Kyc-MarketingSolutionsPage",
        image:"/projects/projectKYC.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.SASS ,TAGS.JAVASCRIPT],
    },
    {
        title: "Hertha Junior - Official Website",
        description: t("PROJ.third.desc"),
        link: "https://herthajunior.vercel.app/",
        github: "https://github.com/JulianBerardinelli/Hertha.jr-page.io",
        image: "/projects/projectHERTHA.webp", 
        tags: [TAGS.HTML, TAGS.CSS, TAGS.SASS, TAGS.TAILWIND ,TAGS.JAVASCRIPT],
    },
];


---

{
    PROJECTS.map(({ title, description, tags, image, github, link }) => (
        <article>
            <a target="_blank" href={github}>
                <h3 class=" text-lg lg:text-2xl font-semibold mb-2 pt-5 text-blue-200">
                {title}
                {title === 'FORELSKET-MB eCommerce ' && <Loading />}
                {title === 'X - Twitter Clon' && <NewProject />}
                </h3>
            </a>
            <p class="text-sm lg:text-lg mb-4 text-pretty opacity-70">
                {description.includes("midudev") ? (
                    <span>
                        {description.split("midudev")[0]} {/* Parte del texto antes de "midudev" */}
                        <a href="https://www.youtube.com/c/midudev" target="_blank"><span class="text-pink-200 border-b-1 border-pink-200">midudev</span></a> {/* "midudev" con estilo rojo */}
                        {description.split("midudev")[1]} {/* Parte del texto despu√©s de "midudev" */}
                    </span>
                ) : (
                    description
                )}</p>
            <ul class="flex flex-row gap-x-4 gap-y-2 mb-6 flex-wrap">
                {tags.map((tag)=>(
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs  ${tag.class} py-1 px-3`}>
                            <tag.icon class="size-4" />
                        {tag.name}
                        </span>
                        </li>
                ))}
            </ul>
            <div class="flex flex-row gap-x-5 mb-6">
                <a href={github} target="_blank" class="flex items-center justify-center gap-x-2 text-sm lg:text-lg text-blue-200 hover:text-blue-300">
                    <svg class="size-4" xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
                    View Code
                </a>
                {link && <a href={link} target="_blank" class="flex items-center justify-center gap-x-2 text-sm lg:text-lg text-blue-200 hover:text-blue-300">
                    <svg class="size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
                    Preview</a>}
            </div>
            <a target="_blank" href={github}>
                <img class="rounded shadow-black/10 mb-10" src={image} alt={`Screenshot - ${image}`} /> 
            </a>
        </article>
    ))
}
