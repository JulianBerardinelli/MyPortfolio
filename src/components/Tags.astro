---
import IllustratorIcon from "./icons/IllustratorIcon.astro";
import PhotoshopIcon from "./icons/PhotoshopIcon.astro";

---

<ul class="flex flex-row gap-x-4 gap-y-2 mb-6 flex-wrap">
    <li>
        <span
            class={`flex gap-x-2 rounded-full text-xs  bg-blue-800 text-white py-1 px-3`}
        >
            <PhotoshopIcon class="size-4" />
            Photoshop
        </span>
    </li>
    <li>
        <span
            class={`flex gap-x-2 rounded-full text-xs  bg-yellow-600 text-white py-1 px-3`}
        >
            <IllustratorIcon class="size-4" />
            Illustrator
        </span>
    </li>
</ul>
