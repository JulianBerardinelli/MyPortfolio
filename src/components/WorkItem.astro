---
interface Props {
    index: number
    date: string;
    title: string;
    description1: string;
    description2: string;
    link: string;
}

const { index, date, title, description1, description2, link } = Astro.props;

---
<ol class="relative border-s border-gray-200">
    <li class="mb-10 ms-6">
      <!-- Ícono adaptado del StudiesItem -->
      <div class="absolute -start-3">
        <div class="flex items-center justify-center w-6 h-6 rounded-full bg-white">
            <img src="/logos/nexion.png" alt="Nexion Solutions Logo">
          </svg>
        </div>
      </div>
  
      <!-- Contenido del ítem -->
      <div class="mt-3 sm:pe-8">
        <a href={link} target="_blank">
          <h3 class="text-m font-semibold text-white transition pb-3">
            {title}
          </h3>
        </a>
        <time class="block mb-2 text-sm font-normal leading-none text-gray-500">
          {date}
        </time>
        <p class="text-base font-normal text-[12px] lg:text-[11.5px] text-white opacity-70 text-balance ">
          {description1}
        </p>
        <p class="text-base font-normal mt-2 text-[12px] lg:text-[11.5px] text-white opacity-70 text-balance ">
            {description2}
          </p>
      </div>
    </li>
  </ol>
  

